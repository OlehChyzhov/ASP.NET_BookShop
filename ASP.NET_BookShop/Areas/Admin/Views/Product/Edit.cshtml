@model Product

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="Title" type="text" />
                    <label class="ms-2">Product Title</label>

                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="Author" type="text" />
                    <label class="ms-2">Author</label>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <textarea class="form-control border-0 shadow" asp-for="Description" type="text"></textarea>
                    <label class="ms-2">Description</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="ISBN" type="text" />
                    <label class="ms-2">ISBN</label>

                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="ListPrice" type="text" />
                    <label class="ms-2">Product List Price</label>

                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="Price" type="text" />
                    <label class="ms-2">Price</label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="Price50" type="text" />
                    <label class="ms-2">Price 50+</label>

                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="Price100" type="text" />
                    <label class="ms-2">Price 100+</label>
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6">
                        <button type="submit" class="btn btn-dark form-control">Edit</button>
                    </div>

                    <div class="col-6">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-dark border-1 form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>